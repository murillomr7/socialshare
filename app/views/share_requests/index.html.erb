<h1>Listing share_requests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Value</th>
      <th>Eventdate</th>
      <th>Description</th>
      <th>Member</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @share_requests.each do |share_request| %>
      <tr>
        <td><%= share_request.title %></td>
        <td><%= share_request.value %></td>
        <td><%= share_request.eventDate %></td>
        <td><%= share_request.description %></td>
        <td><%= share_request.member.name %></td>
        <td><%= link_to 'Show', share_request %></td>
        <td><%= link_to 'Edit', edit_share_request_path(share_request) %></td>
        <td><%= link_to 'Destroy', share_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

